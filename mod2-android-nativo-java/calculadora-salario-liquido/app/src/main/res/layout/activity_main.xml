<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textCalculadoraSalarioLiquido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora Salario Liquido"
        android:textAlignment="center"
        android:layout_marginBottom="90dp"
        android:textSize="28sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Salário Bruto R$"
            android:id="@+id/textSalarioBrutoMain"/>

        <EditText
            android:id="@+id/edt_salario_bruto_main"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="0,00"
            android:inputType="numberDecimal"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:gravity="left"
            android:layout_marginLeft="25dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Número Dependentes"
            android:id="@+id/textNumeroDependentesMain"/>

        <EditText
            android:id="@+id/edt_numero_dependente_main"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/textOutrasDepesasMain"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="left"
            android:text="Outras Despesas R$" />

        <EditText
            android:id="@+id/edt_outros_dependentes_main"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:hint="0,00"
            android:inputType="numberDecimal"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_margin="50dp"
        android:text="Calcular"
        android:id="@+id/btn_calcular_tela_main"
        />
</LinearLayout>